{sys, [
    {lib_dirs, ["../deps"]},
    {erts, [{mod_cond, derived}, {app_file, strip}]},
    {app_file, strip},
    {rel, "globalregistry", "1",
        [
            kernel,
            stdlib,
            xmerl,
            sasl,
            public_key,
            crypto,
            ssl,
            % All ctool deps will be included in the release package,
            % so there is no need to list them here.
            ctool,
            % n2o is a ctool dep, but it is not listed in ctool.app.src,
            % which requires this line to include it in the package (but not start it)
            {n2o, load},
            globalregistry
        ]},
    {rel, "start_clean", "",
        [
            kernel,
            stdlib
        ]},
    {boot_rel, "globalregistry"},
    {profile, embedded},
    {incl_cond, derived},
    {mod_cond, derived},
    {excl_archive_filters, [".*"]}, %% Do not archive built libs
    {excl_sys_filters, ["^bin/.*", "^erts.*/bin/(dialyzer|typer)",
        "^erts.*/(doc|info|include|lib|man|src)"]},
    {excl_app_filters, ["\.gitignore"]},
    {app, globalregistry, [{mod_cond, app}, {incl_cond, include}, {lib_dir, ".."}]},
    {app, hipe, [{incl_cond, exclude}]}
]}.

{target_dir, "globalregistry"}.

{overlay_vars, "vars.config"}.

{overlay, [
    {mkdir, "log/sasl"},
    %% Directory for internal project data (e.g. certificates)
    {mkdir, "resources"},
    %% Directory for external project data (e.g. BigCouch DB release)
    {mkdir, "data"},

    %% Copy base files for starting and interacting with node
    {copy, "../deps/node_package/priv/base/erl",
        "{{erts_vsn}}/bin/erl"},
    {copy, "../deps/node_package/priv/base/nodetool",
        "{{erts_vsn}}/bin/nodetool"},
    {template, "../deps/node_package/priv/base/runner",
        "bin/globalregistry"},
    {template, "../deps/node_package/priv/base/env.sh",
        "lib/env.sh"},
    %% Copy n2o files
    {copy, "../src/gui/gui_static/", "resources"},
    %% Copy server certificates
    {copy, "../cacerts", "resources"},
    %% Copy Global Registry Provider CA
    {copy, "../grpca", "resources"},
    %% Copy license
    {copy, "../LICENSE.txt", "resources"},
    {copy, "../src/dao/views/", "resources"},
    %% Copy BigCouchDB release
    {copy, "../deps/bigcouchdb", "data"},
    %% Copy onepanel release
    {copy, "../onepanel/rel/onepanel", "data"},
    %% Copy setup and administrative scripts
    {copy, "scripts", "data"},
    %% Copy auth config file. By default it is empty, but if the user has access
    %% to onedev repo, it will be exchanged for working config with test apps.
    {copy, "files/auth.config", "resources"},
    % Copy example auth.config
    {copy, "files/auth.config.example", "resources"},
    % Copy customisable pages of GUI
    {copy, "files/PRIVACY_POLICY.html", "resources"},
    {copy, "files/HOMEPAGE_HEADER.html", "resources"},
    %% Copy config files
    {template, "files/app.config", "etc/app.config"},
    {template, "files/vm.args", "etc/vm.args"}
]}.
