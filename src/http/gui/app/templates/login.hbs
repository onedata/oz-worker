<div class="container login-box-container">
  <div class="row row-centered">
    <div class="col-xs-9 col-centered login-box">
      <h1>{{t 'login.boxTitle'}}</h1>
      <h2>{{t 'login.boxSubtitle'}}</h2>
      <div class="container-fluid login-buttons-container">
        <div class="row row-centered">
          <div class="col-xs-2 col-centered">
            <div {{action 'authenticate' 'github'}} class="login-icon-box github">
            </div>
          </div>
          <div {{action 'authenticate' 'twitter'}} class="col-xs-2 col-centered">
            <div class="login-icon-box twitter">
            </div>
          </div>
          <div {{action 'authenticate' 'google'}} class="col-xs-2 col-centered">
            <div class="login-icon-box google">
            </div>
          </div>
          <div {{action 'authenticate' 'dropbox'}} class="col-xs-2 col-centered">
            <div class="login-icon-box dropbox">
            </div>
          </div>
          <div {{action 'authenticate' 'facebook'}} class="col-xs-2 col-centered">
            <div class="login-icon-box facebook">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
