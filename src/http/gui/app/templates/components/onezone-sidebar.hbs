<div class="brand">
  {{#link-to 'home'}}
    <div class="logo"></div>
  {{/link-to}}
</div>

<div class="accordion-container">
  {{!-- TODO: use bs-accordion (Ember component) --}}
  {{!-- add class "collapse in" to uncollapse by default --}}
  <div class="accordion">
    <div class="accordion-group">
      <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" href="#collapse-connect">
          <h1>{{t 'onezone.sidebar.connectHead'}}</h1>
          <div class="arrow-down"></div>
        </a>
      </div>
      <div id="collapse-connect" class="accordion-body collapse">
        <div class="accordion-inner">
          {{accounts-list}}
        </div>
      </div>
    </div>
    <div class="accordion-group">
      <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" href="#collapse-spaces">
          <h1>{{t 'onezone.sidebar.manageSpacesHead'}}</h1>
          <div class="arrow-down"></div>
        </a>
      </div>
      <div id="collapse-spaces" class="accordion-body collapse">
        <div class="accordion-inner">
          {{#each spaces as |s|}}
            <ul>
              <li>
                {{s.name}}
                <ul>
                  {{#each s.providers as |p|}}
                    <li>{{p.name}}</li>
                  {{/each}}
                </ul>
              </li>
            </ul>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="accordion-group">
      <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" href="#collapse-files">
          <h1>{{t 'onezone.sidebar.filesHead'}}</h1>
          <div class="arrow-down"></div>
        </a>
      </div>
      <div id="collapse-files" class="accordion-body collapse">
        <div class="accordion-inner">
          {{#each providers as |p|}}
            <ul>
              <li>
                {{p.name}}
                <ul>
                  {{#each p.spaces as |s|}}
                    <li>{{s.name}}</li>
                  {{/each}}
                </ul>
              </li>
            </ul>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>
