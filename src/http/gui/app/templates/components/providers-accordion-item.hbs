<div class="accordion-group providers-accordion-group">
  <div class="item">
    <div class="accordion-heading providers-accordion-heading">
      <a class="accordion-toggle providers-accordion-toggle">
        <div class="go-to-provider" {{action "goToProvider"}}>
          <div class="provider-icon">
            {{one-icon icon=iconName color=iconColor}}
          </div>
          <div class="provider-header">
            {{provider.name}}
          </div>
        </div>
        <div class="star-toggle" {{action "toggleDefault"}}>
          {{#if provider.isDefault}}
            {{one-icon icon="star"}}
          {{else}}
            <div class="star-empty">
              {{one-icon icon="star-empty"}}
            </div>
          {{/if}}
        </div>
        <div class="spaces-count" data-toggle="collapse" href="#collapse-provider-{{provider.id}}">
          <div class="icon">
            {{one-icon icon="space"}}
          </div>
          <div class="label">
            {{provider.spaces.length}}
          </div>
        </div>
      </a>
    </div>
    <div id="collapse-provider-{{provider.id}}" class="accordion-body providers-accordion-body sidebar-list collapse">
      <div class="accordion-inner">
        <ul>
          {{#each provider.spaces as |s|}}
            <li>
              <div class="icon">
                {{#if s.isDefault}}
                  {{one-icon icon="space-default"}}
                {{else}}
                  {{one-icon icon="space"}}
                {{/if}}
              </div>
              <div class="label">
                {{s.name}}
              </div>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
